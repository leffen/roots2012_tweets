<div class="row-fluid">
	<div class="subhead">
  <h1>ROOTS 2012 Tweets</h1>
  <% if @error %><div class="error"><%= @error %></div><br/><% end %>
	</div>
</div>

<div class="row-fluid">
  <div class="span4">
    <div class="roundbox">
      <% @tweeters.each do |tweeter| %>
        <div class="logo">
            <img src="<%= tweeter[2] %>"  width="75"  height="75"/>
            <h4><%= twitter_user_link(tweeter[0],"[#{tweeter[1]}]") %> </h4>
          </div>
      <%end if @tweeters %>
    </div>
  </div>
  <div class="span8">
	<ul>
      <% @tweets.each do |tweet| %>
       <li>
 		<div class="tweet">
		   <img src="<%= tweet.user.profile_image_url %>"  width="75"  height="75"/>
           <div class="author"><%= twitter_user_link(tweet.user.twitter_id) %> </div>
           <div class="tweet_text"><%= tweet.text %> </div>
           <div class="tweet_time"><%= tweet.created_at %> </div>
			
          </div>
		</li>
      <%end if @tweets %>
	</ul>
  </div>
</div>
